{
  "name": "root",
  "version": "0.2.0",
  "private": true,
  "description": "Boost your MetaMask with IoTeX and DePIN powers! Convert io to 0x addresses, send tokens via INS domains, and stay updated on DePIN projectsâ€”all in one snap. Smooth, easy, and community-driven.",
  "homepage": "https://github.com/machinefi/iotex-snap",
  "bugs": {
    "url": "https://github.com/machinefi/iotex-snap/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/machinefi/iotex-snap.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
